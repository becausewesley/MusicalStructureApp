<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/album_art_img_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:padding="36dp"
        android:src="@drawable/art1" />

    <TextView
        android:id="@+id/player_song_name"
        style="@style/PlayerSongNameText"
        android:text="Song name: song_name_here" />

    <TextView
        android:id="@+id/player_artist_name"
        style="@style/PlayerArtistNameText"
        android:text="Artist: artist_name_here" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:orientation="horizontal">


        <RelativeLayout

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/play_button"
                style="@style/ButtonStyle"
                android:background="@drawable/baseline_play_circle_outline_black" />

            <Button
                android:id="@+id/pause_button"
                style="@style/ButtonStyle"
                android:background="@drawable/baseline_pause_circle_outline_black" />

        </RelativeLayout>


    </LinearLayout>


</LinearLayout>